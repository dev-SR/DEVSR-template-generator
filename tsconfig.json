{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": "./",
		"paths": {
			"@src/*": [
				"src/*"
			],
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}